name: openai_gym_training
entry_points:
    main:
        parameters:
            project_dir : {type: string, default: "../projects"}
            project_name : {type: string, default: "frozen_lake"}
            parent_run_id : {type: string, default: ""}
            env : {type: string, default: "CartPole-v0" }
            sliding_window_size : {type: float, default: 100}
            num_episodes : {type: float, default: 100}
            rl_algorithm : {type: string, default: "dummy_agent" }
            # Dummy Agent Parameters
            always_action : {type: float, default: 0}
            # Double DQN Agent
            layers : {type: float, default: 3}
            neurons : {type: float, default: 128}
            replay_buffer_sie : {type: float, default: 1000000}
            epsilon : {type: float, default: 1}
            epsilon_dec : {type: float, default: 0.9999}
            epsilon_min : {type: float, default: 0.1}
            gamma : {type: float, default: 0.99}
            replace : {type: float, default: 128}
            lr : {type: float, default: 0.0001}
            batch_size : {type: float, default: 32}


        command: >-
            python run.py --project_dir={project_dir} --project_name={project_name} --parent_run_id={parent_run_id} --env={env} --sliding_window_size={sliding_window_size} --num_episodes={num_episodes} --rl_algorithm={rl_algorithm} --always_action={always_action} --layers={layers} --neurons={neurons} --replay_buffer_sie={replay_buffer_sie} --epsilon={epsilon} --epsilon_dec={epsilon_dec} --epsilon_min={epsilon_min} --gamma={gamma} --replace={replace} --lr={lr} --batch_size={batch_size}
