name: openai_gym_training
entry_points:
    main:
        parameters:
            project_name : {type: string, default: "Frozen-Lake"}
            parent_run_id : {type: string, default: ""}
            env : {type: string, default: "Frozen Lake" }
            sliding_window_size : {type: float, default: 100}
            num_episodes : {type: float, default: 2500}
            eval_interval : {type: float, default: 1}
            rl_algorithm : {type: string, default: "sarsamax" }
            # Model Checking Parameters
            prism_dir : {type: string, default: "../prism_files"}
            prism_file_path : {type: string, default: "frozen_lake-v1.prism"}
            constant_definitions : {type: string, default: "slippery=0.0"}
            prop : {type: string, default: "Pmax=? [F AT_FRISBEE=true ]"}
            max_steps : {type: float, default: 20}
            disabled_features : {type: string, default: ""}
            wrong_action_penalty : {type: float, default: 1000}
            reward_flag : {type: float, default: 0}
            deploy : {type: float, default: 0}

            #Sarsamax
            alpha : {type: float, default: 0.8}

            # Dummy Agent Parameters
            always_action : {type: float, default: 0}
            # Double DQN Agent
            layers : {type: float, default: 3}
            neurons : {type: float, default: 512}
            replay_buffer_size : {type: float, default: 1000000}
            epsilon : {type: float, default: 1}
            epsilon_dec : {type: float, default: 0.999}
            epsilon_min : {type: float, default: 0.1}
            gamma : {type: float, default: 0.99}
            replace : {type: float, default: 128}
            lr : {type: float, default: 0.0001}
            batch_size : {type: float, default: 565}


        command: >-
            python run.py --project_name={project_name} --parent_run_id={parent_run_id} --env={env} --sliding_window_size={sliding_window_size} --num_episodes={num_episodes} --eval_interval={eval_interval} --alpha={alpha} --rl_algorithm={rl_algorithm} --prism_dir={prism_dir} --prism_file_path={prism_file_path} --constant_definitions={constant_definitions} --prop={prop} --reward_flag={reward_flag} --max_steps={max_steps} --disabled_features={disabled_features} --wrong_action_penalty={wrong_action_penalty} --always_action={always_action} --layers={layers} --neurons={neurons} --replay_buffer_size={replay_buffer_size} --epsilon={epsilon} --epsilon_dec={epsilon_dec} --epsilon_min={epsilon_min} --gamma={gamma} --replace={replace} --lr={lr} --batch_size={batch_size}